<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.ssoft.filemanager">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />

    <uses-feature android:name="android.hardware.usb.host" />

    <uses-permission android:name="android.permission.USB_PERMISSION" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Views.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
        </activity>
        <activity android:name=".Views.InternalExplorerActivity" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.app.ssoft.filemanager"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity
            android:name=".Views.ImageFullScreenActivity"
            android:label="@string/title_activity_image_full_screen" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="a70a2cc6b67d860f81795b637ad1b07304549055" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDVPTd8BcopeWRLIV19VuClMgTpLBUQ_BY" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".Views.InfoActivity" />
        <activity android:name=".Views.ImageFilterActivity" />
        <activity android:name=".Views.DownloadFilterActivity" />
        <activity android:name=".Views.AppsFilterActivity" />
        <activity android:name=".Views.MediaFilterActivity" />
        <activity
            android:name=".Views.DocumentFIlterActivity"
            android:theme="@style/myActivityTheme" />
        <activity android:name=".Views.StorageInfoActivity"></activity>
    </application>

</manifest>